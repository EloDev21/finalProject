{% extends 'base.html.twig' %}

{% block title %}ICréation de Newsletter
{% endblock %}
{% block css %}
	<link href="{{ asset('assets/css/styles.css') }}" rel="stylesheet"/>
	<link href="{{ asset('assets/css/navbar.css') }}" rel="stylesheet"/>
	<link href="{{ asset('assets/css/slider.css') }}" rel="stylesheet"/>

{% endblock %}
{% block content %}
	<div class="container">
		<div class="row  " style="display:flex;justify-content:center;">
			<div class="col" style="padding: 2rem 1rem;margin-bottom: 2rem;background-color: #e9ecef;border-radius: .3rem;">
				<h1>
					Création de  newsletter(s).
				</h1>
				{{form_start(form)}}
				{{form_row(form.name)}}
				{{form_row(form.content)}}
				{# <p>Contenu</p> #}
				{# <div id="editor"></div> #}
				{{form_row(form.categories)}}
				{{form_end(form)}}
			</div>
		</div>
	</div>

{% endblock %}
{% block js %}
	<script src="https://cdn.ckeditor.com/4.17.1/standard/ckeditor.js"></script>
	<script src="{{ asset('assets/js/ckeditor.js') }}" defer></script>
{% endblock %}
