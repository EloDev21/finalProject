{% extends 'base.html.twig' %}

{% block title %}Profil de
	{{app.user.firstname}}
	{{app.user.lastname}}
{% endblock %}
{% block css %}
	<link href="{{ asset('assets/css/navbar.css') }}" rel="stylesheet"/>
	<link
	href="{{ asset('assets/css/styles.css') }}" rel="stylesheet"/>

{#{{ encore_entry_link_tags('app') }}#}
{% endblock %}

{% block js %}
{# <script src="{{ asset('assets/js/navbar.js') }}"></script> #}
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

{% endblock %}
{% block content %}

	<div class="container-fluid">
		{% for message in app.flashes('message' )%}
			
			<div class="alert alert-success" role="alert">
			{{message}}
		

			</div>


		{% endfor %}
		<h1 class="text-center" style=" padding: 2rem 1rem;margin-bottom: 2rem;background-color: #e9ecef;border-radius: .3rem;opacity:0.8">
			Bienvenue sur votre espace personnel
		<strong>
			{{app.user.firstname}}
			{{app.user.lastname}}
		</strong>
		</h1>

		<div class="container mt-5 mb-5 ">
			<div class="row  " style="display:flex;justify-content:center;">
				<div class="col-6" style="padding: 2rem 1rem;margin-bottom: 2rem;background-color: #e9ecef;border-radius: .3rem;">
					<div class="grix xs4 container">
						<div class="col-xs1 " >Prénom :
							{{app.user.firstname}}</div>
						<div class="col-xs1">Nom :
							{{app.user.lastname}}</div>
						<div class="col-xs1">Email:
							{{app.user.email}}</div>
						<div class="col-xs1">Téléphone:
							{{app.user.phone}}</div><br>
						<div class="col-xs3">
							<a href="{{path('profile_edit')}}" class="btn btn-primary btn-md  ">Modifier le profil</a>
						</div><br>
						<div class="col-xs3">
							<a href="{{path('pass_edit')}}" class="btn btn-primary btn-md ">Modifier le mot de passe</a>
						</div>


					</div>

				</main>
      </div>
      </div>
      </div>
      </div>

			{% endblock %}
