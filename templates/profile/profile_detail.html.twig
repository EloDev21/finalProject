{% extends 'base.html.twig' %}

{% block title %}Profil de {{app.user.firstname}} {{app.user.lastname}}{% endblock %}
{% block css %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/axentix@1.3.4/dist/css/axentix.min.css">
<link href="{{ asset('assets/css/navbar.css') }}" rel="stylesheet" /> 
{% endblock %}

{% block content %}

  <div class="container">

    {% for message in app.flashes('message' )%}
    <div class="col-xs4">
    <div class="col-p3 my-2 rounded-2 success">{{message}}</div>

    </div>
      
    {% endfor %}
    <h1> Profil de {{app.user.firstname}} {{app.user.lastname}}</h1>
      <div class="grix xs4 container">
  <div class="col-xs1">Prénom :</div>
<div class="col-xs3">{{app.user.firstname}}</div>
  <div class="col-xs1">Nom :</div>
<div class="col-xs3"> {{app.user.lastname}}</div>
  <div class="col-xs1">Email:</div>
<div class="col-xs3"> {{app.user.email}}</div>
  <div class="col-xs1">Téléphone:</div>
<div class="col-xs3"> {{app.user.phone}}</div>
<div class="col-xs3"><a href="{{path('profile_edit')}}" class="btn btn-primary xs ">Modifier le profil</a></div>
<div class="col-xs3"><a href="{{path('pass_edit')}}"class="btn btn-primary ">Modifier le mot de passe</a></div>


  </div>
