{% extends 'base.html.twig' %}

{% block title %}Profil de
	{{app.user.firstname}}
	{{app.user.lastname}}
{% endblock %}
{% block css %}
	<link href="{{ asset('assets/css/navbar.css') }}" rel="stylesheet"/>
	<link
	href="{{ asset('assets/css/styles.css') }}" rel="stylesheet"/>

{#{{ encore_entry_link_tags('app') }}#}
{% endblock %}

{% block js %}
	{# <script src="{{ asset('assets/js/navbar.js') }}"></script> #}
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

{% endblock %}
{% block content %}

{% for message in app.flashes('message' )%}

<div class="alert alert-success" role="alert">
{{message}}


</div>


{% endfor %}
<h1 class="text-center" style=" padding: 2rem 1rem;margin-bottom: 2rem;background-color: #e9ecef;border-radius: .3rem;opacity:0.8;color:#7f5539;font-weight:bold">Informations personnelles</h1>

<div class="container-fluid p-0">
	
			<section class="d-flex justify-content-center flex-column align-items-center">
				<div class="col-xxl-4 col-xl-5 col-lg-6 col-8 col-md-7" style="padding: 2rem 1rem;margin-bottom: 2rem;background-color: #e9ecef;border-radius: .3rem;">
					
				<div class="col-xs1 mb-2">Prénom :
						<strong>
							{{app.user.firstname}}</strong>
					</div>
					<div class="col-xs1 mt-2 mb-2">Nom :
						<strong>
							{{app.user.lastname}}</strong>
					</div>
					<div class="col-xs1 mt-2 mb-2">Email:
						<strong>
							{{app.user.email}}</strong>
					</div>
					<div class="col-xs1 mt-2 mb-2">Téléphone:
						<strong>
							{{app.user.phone}}</strong>
					</div><br>
						<div class="d-flex justify-content-center flex-column align-items-center ">
					<div class="col-xs3">
						<a href="{{path('profile_edit')}}" class="btn btn-primary btn-md  ">Modifier le profil</a>
					</div><br>
					<div class="col-xs3">
						<a href="{{path('pass_edit')}}" class="btn btn-primary btn-md ">Modifier le mot de passe</a>
					</div>
					</div>


				</div>

			</section>{% endblock %}
