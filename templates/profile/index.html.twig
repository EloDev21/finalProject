{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block content %}

<h1 class="text-center mt-5">Liste de tous nos utilisateurs</h1>
<div class="container mt-5 mb-5" style="display:flex;justify-content:center">
<div class="col-6">
{# si le length du tableau est  > 0 on a uin elt sinn on n'a rien #}
{% if profiles | length >0  %}
    <table class="table table-striped table-success">
    <thead> 
        <tr>
        <th>prénom </th>
        <th>Nom </th>
        <th> Téléphone </th>
        <th>Email  </th>
        {# <th>Role  </th> #}
        <th>Supprimer  </th>
            
      
        </tr>

    </thead>
    <tbody>
        {% for profile in profiles %}
        <tr>
        <td>{{profile.firstname}} </td>
      
      
        <td> {{profile.lastname}} </td>
        <td> {{profile.phone}} </td>
        
        <td>{{profile.email}}  </td>
        {# <td>{{profile.roles}}  </td> #}
        <td><button  class="btn btn-danger text-center"><i class="fa fa-minus-circle"></i></button>  </td>
  
            
        {% endfor %}
       
    </tbody>

</table>

</div>
</div>

{% endif %}

{% endblock %}
