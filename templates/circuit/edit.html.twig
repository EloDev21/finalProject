{% extends "base.html.twig" %}
{% block title %}Edit a trip
{% endblock %}
{% block css %}

{% endblock %}
{% block content %}
<h1 class="text-center" style=" padding: 2rem 1rem;margin-bottom: 2rem;background-color: #e9ecef;border-radius: .3rem;opacity:0.8;color:#7f5539;font-weight:bold">Modification  d'un circuit</h1>
	<div class="container-fluid">
	
		<section class="d-flex justify-content-center align-items-center flex-column">
			<div class=" col-xxl-6 col-xl-7 col-lg-6 col-10 col-md-9 " style="padding: 2rem 1rem;margin-bottom: 2rem;background-color: #e9ecef;border-radius: .3rem;">
					{{form_start(formCircuit)}}
						{{form_label(formCircuit.title, 'Titre du circuit')}}
						{{form_widget(formCircuit.title)}}
						{{form_label(formCircuit.description,'Description du circuit ')}}
						{{form_widget(formCircuit.description)}}
						{{form_label(formCircuit.minidescription,'Mini description du circuit')}}
						{{form_widget(formCircuit.minidescription)}}
						{{form_label(formCircuit.price,'Prix du circuit')}}
						{{form_widget(formCircuit.price)}}
						{{form_label(formCircuit.picture,'Photo hébérgement ')}}
						{{form_widget(formCircuit.picture)}}
						{{form_label(formCircuit.imageFile,'Photo du circuit ')}}
						{{form_widget(formCircuit.imageFile)}}
						<div class="button d-flex justify-content-center">
							<input type="submit" class="btn mt-4 btn-warning" value=" Modifier et sauvegarder">
						</div>
					{{form_end(formCircuit)}}

			</div>
		<section>
	</div>
										

{% endblock %}
