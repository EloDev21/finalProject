{% extends "base.html.twig" %}
{% block title %}Add a trip{% endblock %}
{% block css %}
<link href="{{ asset('assets/css/circuit.css') }}" rel="stylesheet" /> 
<link href="{{ asset('assets/css/styles.css') }}" rel="stylesheet" /> 
<link href="{{ asset('assets/css/navbar.css') }}" rel="stylesheet" /> 
{% endblock %}
{% block content %}

<h1 class="text-center" style=" padding: 2rem 1rem;margin-bottom: 2rem;background-color: #e9ecef;border-radius: .3rem;opacity:0.8;color:#7f5539;font-weight:bold">Ajout  d'un circuit - Sene'Safari</h1>
<div class="container mt-5 mb-5 ">
	<div class="row  " style="display:flex;justify-content:center;">
		<div class="col-6 " style="padding: 2rem 1rem;margin-bottom: 2rem;background-color: #e9ecef;border-radius: .3rem;">

	

		{{form_start(formCircuit)}}
		<div class="row">

			<div class="col">
				{{form_label(formCircuit.title, 'Titre du circuit')}}

				<div class="col">
					{{form_widget(formCircuit.title)}}
				</div>
			</div><br><br>
			<div class="row">

				<div class="col">
					{{form_label(formCircuit.description,'Description du circuit ')}}

					<div class="col">
						{{form_widget(formCircuit.description)}}
					</div>
					<div class="row ">

						<div class="col ">
							{{form_label(formCircuit.minidescription,'Mini description du circuit')}}

							<div class="col ">
								{{form_widget(formCircuit.minidescription)}}
							</div>
							<div class="row">

								<div class="col">
									{{form_label(formCircuit.price,'Prix du circuit')}}

									<div class="col form-label">
										{{form_widget(formCircuit.price)}}
									</div>


								</div>
								<div class="row">

									<div class="col">
										{{form_label(formCircuit.picture,'Photo h√©bergement')}}

										<div class="col form-label">
											{{form_widget(formCircuit.picture)}}
										</div>


									</div>
								<div class="row ">

									<div class="col">
										{{form_label(formCircuit.imageFile,'Photo du circuit ')}}

										<div class="col form-control">
											{{form_widget(formCircuit.imageFile)}}
										</div>


									</div>
									<input type="submit" class="btn btn-primary" value=" Sauvegarder">
									
								</div>
								{{form_end(formCircuit)}}
								</div>
								</div>
								</div>
							{% endblock %}
