{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié
{% endblock %}
{% block css %}

	<link href="{{ asset('assets/css/styles.css') }}" rel="stylesheet"/>
	<link href="{{ asset('assets/css/navbar.css') }}" rel="stylesheet"/>
{% endblock %}
{% block content %}
<h1 class="text-center" style=" padding: 2rem 1rem;margin-bottom: 2rem;background-color: #e9ecef;border-radius: .3rem;opacity:0.8;color:#7f5539;font-weight:bold">Réinitialisation de votre mot de passe</h1>
	<section class="d-flex justify-content-center flex-column align-items-center">
		
			<div class="col-xxl-4 col-xl-5 col-lg-6 col-md-7 col-xs-8 col-xxs-9 col-10 " style="padding: 2rem 1rem;margin-bottom: 2rem;background-color: #e9ecef;border-radius: .3rem;">

				<form method="post">


					<h1 class=" mt-3 mb-3 font-weight-normal text-center">
						<strong>Mot de passe oublié ?<strong></h1>

								
							{{ form(resetForm) }}

								<small class="text-muted">Merci d'entrer votre adresse e-mail afin de récuperer votre mot de passe.</small>

				</form>
			</div>
		</section>
			{% endblock %}
