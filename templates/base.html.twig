<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous"/>
		<title>
			{% block title %}Safari SALY
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
		           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block css %}
			<link href="{{ asset('assets/css/navbar.css') }}" rel="stylesheet"/>
			<link href="{{ asset('assets/css/styles.css') }}" rel="stylesheet"/>
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
			<link
			rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
		{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}

		{% block js %}
			{# <script src="{{ asset('assets/js/navbar.js') }}"></script> #}
			<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
			<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
		{% endblock %}
	</head>


	<body>
		{# mise en place de la navbar dans le fichier base pour l'avoir sur toutes les templates #}

		<div class="container-fluid">
			<nav class="navbar navbar-light bg-transparent navbar-expand-lg">
				<a class="navbar-brand" href="{{path('home')}}">
					<img src="https://res.cloudinary.com/dqdoissmb/image/upload/v1638832777/safariSaly/logo2_ejsqpm.png" alt="..."/></a>
			</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav mr-auto" style="margin-left: auto; margin-right: 0;">
					<li
						class="nav-item active me-4" style="font-size:25px">
						{# <a class="nav-link" href="#">Accueil</a> #}
						<a href="{{ path('home') }}" class="">
							<i class="fa fa-home" aria-hidden="true"></i>
							</a>
					</li>
					<li
						class="nav-item me-4" style="font-size:25px">
						{# <a class="nav-link" href="#">A propos</a> #}
						<a href="{{ path('circuit') }}">
							<i class="fa fa-plane"></i>
							</a>
					</li>
					<li
						class="nav-item me-4 "style="font-size:25px">
						{# <a class="nav-link" href="#">Services</a> #}
						<a href="{{path('app_login')}}">
							<i class="fa fa-user-plus"></i>
						</a>
					</li>
					{# <a class="nav-link" href="#">Contact</a> #}
					{% if app.user %}
          {# panier #}
						<li class="nav-item me-4" style="font-size:25px">
							<a href="{{path('cart_index')}}">
								<i class="fa fa-shopping-cart"></i>
								</a>
						</li>
            {# profil user #}
						<li class="nav-item me-4" style="font-size:25px">
							<a href="{{path('profile_detail')}}">
								<i class="fa fa-user"></i>
								</a>
						</li>

          {# se déconnecter #}
            <li class="nav-item me-4" style="font-size:25px">
            <a href="{{path('app_logout')}}">
              <i class="fa fa-sign-out"></i>
              </a>
          </li>
						<li class="nav-item me-4" style="font-size:25px">
            {# si role editor ou au dessus on accede à la liste des users #}
							{% if(is_granted('ROLE_EDITOR')) %}
								<a href="{{ path('profiles') }}">
									<i class="fa fa-users"></i></a>
						
							{% endif %}


						{% endif %}
         {# contact us #}

						<li class="nav-item me-4" style="font-size:25px">
							<a href="{{path('contact')}}">
								<i class="fa fa-phone"></i>
								</a>
						</li>

					</ul>
				</div>
			</div>
		</nav>


		{% block content %}{% endblock %}

		<footer class="footer mt-auto py-3 bg-light">
			<div class="container">
				<div class=" row rowfoot">
					<div class="col-3">
						<a href="#">
							<i class="fa fa-facebook me-3"></i>
						</a>
						<a href="#">
							<i class="fa fa-twitter me-3"></i>
						</a>
						<a href="#">
							<i class="fa fa-youtube me-3"></i>
						</a>

					</div>
					<div class="col-3">
						<span class="text-muted ">2021 SENE'Safari</span>
					</div>
					<div class="col-3">
						<a href="#">Mentions légales</a>
					</div>

				</footer>
			</div>
		</div>
	</body>
</html></div></div></div></body></html>
