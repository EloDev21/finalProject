<!DOCTYPE html>
<html>
	<head>

			<meta name="viewport" content="width=device-width, initial-scale=1">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
			<link href="{{ asset('assets/css/navbar.css') }}" rel="stylesheet"/>
			<link href="{{ asset('assets/css/styles.css') }}" rel="stylesheet"/>
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
				<title>
				{% block title %}
					SENE'Safari


				{% endblock %}
				</title>

				{% block css %}
				{% endblock %}

			{% block js %}
			<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
			<script src="{{ asset('assets/js/scroll.js') }}"></script>
				<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
			{% endblock %}
	</head>

	<body>
		{% block nav %}
			{# mise en place de la navbar dans le fichier base pour l'avoir sur toutes les templates #}
			<header>
				<nav class="navbar navbar-expand-lg navbar-light  " style="opacity:0.9; background-color: #cfd6e2">
					<div class="container-fluid justify-content-center">
						<a class="navbar-brand logo" href="{{path('home')}}">
							<img src="https://res.cloudinary.com/dqdoissmb/image/upload/v1638832777/safariSaly/logo2_ejsqpm.png" alt="logoNavbar"/>
						</a>
						<h5 class="clignote me-3">Site test</h5>
						<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
							<span class="navbar-toggler-icon"></span>
						</button>
						{# mx pour centrer au lieu de me  #}
							<div class="collapse navbar-collapse" id="navbarSupportedContent">
								<ul class="navbar-nav mx-auto mb-2 mb-lg-0">
									<li class="nav-item me-3">
									<a class="nav-link" href="{{path('circuit')}}">
										Circuits
									</a>
									</li>
									<li class="nav-item me-3">
									<a class="nav-link" href="{{path('about')}}">A propos</a>
									</li>
									<li class="nav-item me-3">
									<a class="nav-link" href="{{path('contact')}}">Contact</a>
									</li>
								</ul>
							{# PARTIE DROITE DE LA NAVBAR #}
							{# display flex et justify content end pour l'orienter à droite  #}
							<ul class="navbar-nav d-flex justify-content-end">
								{# si l'utilisateur est connecté on lui affiche le menu contenu dans la condition #}
								{% if app.user %}
									<li class="nav-item">
										<a class="nav-link " aria-current="page" href="{{path('profile_detail')}}">
											Profil
										</a>
									</li>
									<li class="nav-item">
										{% if(is_granted('ROLE_EDITOR')) %}
											<a class="nav-link" href="{{path('profiles') }}">
												Users
											</a>
										</li>
									</li>
									<li class="nav-item">

										<a class="nav-link" href="{{path('newsletters_list') }}">News</a>
									</li>
								{% endif %}
							{% endif %}


							{% if not app.user %}
									<li class="nav-item">
									<a class="nav-link" href="{{path('app_login') }}">Connexion</a>
									</li>
							{% endif %}
							{% if not app.user %}
									<li class="nav-item">
									<a class="nav-link" href="{{path('app_register') }}">Inscription</a>
									</li>
							{% endif %}
							{% if app.user %}
									<li class="nav-item">
									<a class="nav-link " aria-current="page" href="{{path('cart_index')}}">
										Panier
									</a>
									</li>
									<li class="nav-item">
									<a class="nav-link  " style="color:red" aria-current="page" href="{{path('app_logout')}}">Déconnexion</a>
									</li>
								{% endif %}
							</ul>
						</div>
					</div>
				</nav>
			</header>
		{% endblock %}
		{% block content %}
		{% endblock %}
		{% block footer %}

			<footer class="text-center text-lg-start text-black d-flex flex-column" style="opacity:0.98;color:black;background-color: #cfd6e2 ">
				<section class=" px-3 d-flex align-items-center">
					<div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3 ">
						<a href="{{path('newsletters')}}" class=" btn newsButton border-secondary newsletter btn-transparent btn-lg text-dark">
							<i class="fa fa-envelope-square "></i>S'inscrire à la newsletter
						</a>
					</div>
				    <hr class="w-100 mt-3 clearfix d-md-none"/>
					<div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3 1stColumn">
						<a href="{{path('home')}}" class="nav-link" style="font-size:1.3rem">Accueil</a>
						<a href="{{path('circuit')}}" class="nav-link" style="font-size:1.3rem">Circuits</a>
						<a href="{{path('contact')}}" class="nav-link" style="font-size:1.3rem">Contact</a>
						{% if app.user %}
						<a href="{{path('app_logout')}}" class="nav-link" style="font-size:1.3rem;color:red">Déconnexion</a>
						{% endif %}
					</div>
					<hr class="w-100 clearfix d-md-none"/>	
					<div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3">
						{% if not app.user %}
						<a href="{{path('app_login')}}" class="nav-link" style="font-size:1.3rem">Connexion</a>
						{% endif %}
						{% if app.user %}
						<a href="{{path('profile_detail')}}" class="nav-link" style="font-size:1.3rem">Profil</a>
						<a href="{{path('cart_index')}}" class="nav-link" style="font-size:1.3rem">Panier</a>
						{% endif %}
						<a href="{{path('about')}}" class="nav-link" style="font-size:1.3rem">A propos</a>
						<a href="{{ path('conditions_d_utilisation') }}" class="nav-link" style="font-size:1.3rem">CGU-CGV</a>
					</div>
				</section>
	<!-- Section: Links -->
				<hr class="my-3">
	<!-- Section: Copyright -->
				<section class="px-3 pt-0 d-flex justify-content-between">
					<div class="col-md-5 col-lg-4 ml-lg-0 text-center text-md-start d-flex align-items-center"> <!-- Facebook -->
						<a href="https://www.google.fr/" target="blank" class="btn btn-outline-warning btn-lg btn-floating m-1" style="transition: inherit !important" role="button">
						<i class="fa fa-facebook-f links" id="sn" style="color:black"></i>
						</a>
			<!-- Twitter -->
						<a href="https://www.google.fr/" target="blank" class="btn btn-outline-warning btn-lg btn-floating m-1" class="" role="button">
						<i class="fa fa-twitter links" id="sn" style="color:black"></i>
						</a>
			<!-- Instagram -->
						<a href="https://www.google.fr/" target="blank" class="btn btn-outline-warning btn-lg btn-floating m-1" class="" role="button">
						<i class="fa fa-instagram links" id="sn" style="color:black"></i>
						</a>
					</div>

					<div class="copyright">
						© 2022 Copyright -
						<a style="color: rgb(64, 88, 136);font-weight:bold" href="{{ path('mentions_legales') }}">
						Mentions légales
						</a>
					</div>
				</section>
			</footer>
			
			<div id="scrolltotop"><div></div></div>
			{% endblock %}
		</body>
	
</html>
